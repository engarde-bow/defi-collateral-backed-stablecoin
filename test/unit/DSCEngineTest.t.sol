        bool minted = i_dsc.mint(msg.sender, amountDscToMint);
        if (!minted) {
            revert DSCEngine__MintFailed();
        }
    }
    */

    function testDepositCollateralAndMintDsc() public {
        uint256 expectedAmountDscToMint = AMOUNT_COLLATERAL / 2;

        //  depositCollateral(tokenCollateralAddress, amountCollateral);
        //  mintDsc(amountDscToMint);

        address tokenCollateralAddress = address(weth);
        uint256 amountCollateral = AMOUNT_COLLATERAL;
        uint256 amountDscToMint = AMOUNT_COLLATERAL / 2;

        vm.startPrank(USER);
        ERC20Mock(weth).approve(address(dsce), AMOUNT_COLLATERAL);
        dsce.depositCollateralAndMintDsc(address(weth), AMOUNT_COLLATERAL, expectedAmountDscToMint);
        vm.stopPrank();

        assertEq(expectedAmountDscToMint, amountDscToMint);
    }

    /*function depositCollateralAndMintDSC(
